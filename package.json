{
  "name": "@oglabs/mcp",
  "version": "2.4.7",
  "description": "Interactive CLI tool and MCP server for managing MCP configurations with tech stack detection and recommendations",
  "main": "mcp-manager.cjs",
  "type": "module",
  "bin": {
    "mcp": "./mcp-manager.js"
  },
  "scripts": {
    "test": "echo \"No tests specified\" && exit 0",
    "fetch-stars": "node fetch-github-stars.js",
    "update-stale-stars": "node fetch-github-stars.js --stale",
    "update-stars-7d": "node fetch-github-stars.js --stale --days 7",
    "update-stars-14d": "node fetch-github-stars.js --stale --days 14",
    "mcp-server": "node mcp-server.js",
    "debug-mcp": "npx -y @modelcontextprotocol/inspector node mcp-server.js",
    "release": "npm version patch && git push --follow-tags",
    "release:patch": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cli",
    "configuration",
    "manager",
    "server",
    "ai",
    "llm"
  ],
  "author": "hari",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmhari/mcp-simple.git"
  },
  "bugs": {
    "url": "https://github.com/kmhari/mcp-simple/issues"
  },
  "homepage": "https://github.com/kmhari/mcp-simple#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "preferGlobal": true,
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "@oglabs/mcp": "^2.4.3",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "playwright": "^1.40.0",
    "zod": "^3.25.72"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
