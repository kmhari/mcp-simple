{
  "name": "@oglabs/mcp",
  "version": "2.0.0",
  "description": "Interactive CLI tool for managing MCP (Model Context Protocol) server configurations",
  "main": "mcp-manager.cjs",
  "type": "module",
  "bin": {
    "mcp": "./bin/mcp-manager.js",
    "create-slack-bot": "./bin/create-slack-bot",
    "get-clickup-api-key": "./bin/get-clickup-api-key"
  },
  "scripts": {
    "test": "echo \"No tests specified\" && exit 0",
    "fetch-stars": "node fetch-github-stars.js",
    "update-stale-stars": "node fetch-github-stars.js --stale",
    "update-stars-7d": "node fetch-github-stars.js --stale --days 7",
    "update-stars-14d": "node fetch-github-stars.js --stale --days 14",
    "mcp-server": "node mcp-server.js",
    "debug-mcp": "npx -y @modelcontextprotocol/inspector node mcp-server.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cli",
    "configuration",
    "manager",
    "server",
    "ai",
    "llm"
  ],
  "author": "hari",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmhari/mcp-simple.git"
  },
  "bugs": {
    "url": "https://github.com/kmhari/mcp-simple/issues"
  },
  "homepage": "https://github.com/kmhari/mcp-simple#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "preferGlobal": true,
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "playwright": "^1.40.0",
    "zod": "^3.25.72"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
