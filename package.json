{
  "name": "@oglabs/mcp",
  "version": "2.6.8",
  "description": "Interactive CLI tool and MCP server for managing MCP configurations with tech stack detection and recommendations",
  "main": "mcp-manager.cjs",
  "type": "module",
  "bin": {
    "mcp": "./mcp-manager.js"
  },
  "files": [
    "mcp-manager.js",
    "mcp-manager.cjs",
    "mcp-server.js",
    "mcp-servers-database.json",
    "mcp-tools.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "echo \"No tests specified\" && exit 0",
    "start": "node mcp",
    "web": "node mcp-manager.cjs --web",
    "server": "node mcp-server.js",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:deploy": "node scripts/deploy.js",
    "preview": "vite preview --outDir dist",
    "prepublishOnly": "npm run build:deploy",
    "release": "npm run prepublishOnly && npm version patch && git push --follow-tags && cd dist && npm publish",
    "release:patch": "npm run prepublishOnly && npm version patch && git push --follow-tags && cd dist && npm publish",
    "release:minor": "npm run prepublishOnly && npm version minor && git push --follow-tags && cd dist && npm publish",
    "release:major": "npm run prepublishOnly && npm version major && git push --follow-tags && cd dist && npm publish"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cli",
    "configuration",
    "manager",
    "server",
    "ai",
    "llm",
    "tech-stack",
    "recommendations",
    "web-interface",
    "automation"
  ],
  "author": "hari",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmhari/mcp-simple.git"
  },
  "bugs": {
    "url": "https://github.com/kmhari/mcp-simple/issues"
  },
  "homepage": "https://github.com/kmhari/mcp-simple#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "preferGlobal": true,
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "axios": "^1.6.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "glob": "^11.0.3",
    "node-fetch": "^3.3.2",
    "openai": "^5.8.2",
    "playwright": "^1.40.0",
    "zod": "^3.25.72"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "terser": "^5.43.1",
    "vite": "^6.3.5"
  }
}
